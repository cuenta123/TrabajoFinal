<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" Background="AliceBlue">
    <Grid>
        <StackPanel Margin="0,42,410,0" Background="#FF4EAAAA">
            <Button Name="VerPizza" Content="Ver Pizzas"  Background="#545d6a" Foreground="White" DockPanel.Dock="Top"/>
            <Button Name="AñadirPizza" Content="Añadir Pizza"  Background="#545d6a" Foreground="White" DockPanel.Dock="Top"/>
            <Button Name="Salir" Content="Salir"  Background="#545d6a" Foreground="White" DockPanel.Dock="Top" Click="Salir_Click"/>
            <StackPanel Height="100"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Left" Height="42" VerticalAlignment="Top" Width="107" Background="#FFF39D35">
            <Image x:Name="image" Height="35" Margin="33,0,33,0" Source="/Img/food_cooking_meal_2-512.png"/>
        </StackPanel>
    </Grid>
</Window>
